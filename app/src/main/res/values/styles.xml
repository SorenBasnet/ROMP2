<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="heading" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#3A3838</item>
    </style>

    <style name="edittext" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#DC9835</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#212121</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>