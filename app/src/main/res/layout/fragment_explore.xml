<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#212333"
    tools:context=".ExploreFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/explore_frag_title"
        android:layout_width="328dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/explore"
        android:textColor="#FF9800"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/explore_frag_tourbutton"
        android:layout_width="319dp"
        android:layout_height="80dp"
        android:layout_marginTop="56dp"
        android:background="#EDDAA0"
        android:fontFamily="@font/chivo"
        android:text="@string/explore_frag_button1"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_frag_title" />

    <Button
        android:id="@+id/explore_frag_ctvmbutton"
        android:layout_width="318dp"
        android:layout_height="62dp"
        android:layout_marginTop="36dp"
        android:background="#EDDAA0"
        android:fontFamily="@font/chivo"
        android:text="@string/explore_frag_button2"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_frag_tourbutton" />

    <Button
        android:id="@+id/explore_frag_ltpbutton"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:background="#EDDAA0"
        android:fontFamily="@font/chivo"
        android:text="@string/explore_frag_button3"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_frag_ctvmbutton" />

    <Button
        android:id="@+id/explore_frag_fibbutton"
        android:layout_width="321dp"
        android:layout_height="74dp"
        android:layout_marginTop="36dp"
        android:background="#EDDAA0"
        android:fontFamily="@font/chivo"
        android:text="@string/explore_frag_button4"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_frag_ltpbutton" />

    <Button
        android:id="@+id/explore_frag_vleaguebutton"
        android:layout_width="322dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:background="#EDDAA0"
        android:fontFamily="@font/chivo"
        android:text="@string/explore_frag_button5"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_frag_fibbutton" />

    <ImageView
        android:id="@+id/vsmode_icon"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:src="@drawable/ic_baseline_whatshot_24"
        app:layout_constraintBottom_toBottomOf="@+id/explore_frag_ctvmbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/explore_frag_ctvmbutton"
        app:layout_constraintTop_toTopOf="@+id/explore_frag_ctvmbutton" />

    <ImageView
        android:id="@+id/leaguemode_icon"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:src="@drawable/ic_baseline_sports_soccer_24"
        app:layout_constraintBottom_toBottomOf="@+id/explore_frag_vleaguebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/explore_frag_vleaguebutton"
        app:layout_constraintTop_toTopOf="@+id/explore_frag_vleaguebutton" />

    <ImageView
        android:id="@+id/ltp_icon"
        android:layout_width="71dp"
        android:layout_height="62dp"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/explore_frag_ltpbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/explore_frag_ltpbutton"
        app:layout_constraintTop_toTopOf="@+id/explore_frag_ltpbutton" />

    <ImageView
        android:id="@+id/infobooking_icon"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:src="@drawable/ic_baseline_info_24"
        app:layout_constraintBottom_toBottomOf="@+id/explore_frag_fibbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/explore_frag_fibbutton"
        app:layout_constraintTop_toTopOf="@+id/explore_frag_fibbutton" />

    <ImageView
        android:id="@+id/tournaments_icon"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:src="@drawable/ic_baseline_emoji_events_24"
        app:layout_constraintBottom_toBottomOf="@+id/explore_frag_tourbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/explore_frag_tourbutton"
        app:layout_constraintTop_toTopOf="@+id/explore_frag_tourbutton" />


</androidx.constraintlayout.widget.ConstraintLayout>