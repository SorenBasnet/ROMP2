<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".Fragments.Challenge_Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <TextView
        android:id="@+id/textView35"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/cafe_francoise"
        android:text="@string/challenge_team"
        android:textColor="#C31D08"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cd_team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bahnschrift"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35"
        tools:text="Good Game FC" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bahnschrift"
        android:text="@string/VS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cd_team1" />

    <TextView
        android:id="@+id/cd_team2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Boomshakalaka Futsal Club"
        android:fontFamily="@font/bahnschrift"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/field"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cd_team2" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:scaleY="-1"
                android:src="@drawable/field"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <ImageView
                android:id="@+id/cd_t1_p1icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9" />

            <ImageView
                android:id="@+id/cd_t1_p2icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="89dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/cd_t1_p1icon" />

            <ImageView
                android:id="@+id/cd_t1_p3icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginTop="89dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/cd_t1_p1icon" />

            <ImageView
                android:id="@+id/cd_t1_p4icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginTop="89dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintEnd_toStartOf="@+id/cd_t1_p3icon"
                app:layout_constraintStart_toEndOf="@+id/cd_t1_p2icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t1_p1icon" />

            <ImageView
                android:id="@+id/cd_t1_p5icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginTop="89dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintEnd_toStartOf="@+id/cd_t1_p3icon"
                app:layout_constraintStart_toEndOf="@+id/cd_t1_p2icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t1_p4icon" />

            <ImageView
                android:id="@+id/cd_t2_p1icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintBottom_toTopOf="@+id/cd_t2_player5"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintStart_toStartOf="@+id/imageView10" />

            <ImageView
                android:id="@+id/cd_t2_p2icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="89dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintBottom_toTopOf="@+id/cd_t2_p1icon"
                app:layout_constraintStart_toStartOf="@+id/imageView10" />

            <ImageView
                android:id="@+id/cd_t2_p3icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="89dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintBottom_toTopOf="@+id/cd_t2_p1icon"
                app:layout_constraintEnd_toEndOf="@+id/imageView10" />

            <ImageView
                android:id="@+id/cd_t2_p4icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginBottom="89dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintBottom_toTopOf="@+id/cd_t2_p1icon"
                app:layout_constraintEnd_toStartOf="@+id/cd_t2_p3icon"
                app:layout_constraintStart_toEndOf="@+id/cd_t2_p2icon" />

            <ImageView
                android:id="@+id/cd_t2_p5icon"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginBottom="89dp"
                android:src="@drawable/jerseysmol"
                app:layout_constraintBottom_toTopOf="@+id/cd_t2_p4icon"
                app:layout_constraintEnd_toStartOf="@+id/cd_t2_p3icon"
                app:layout_constraintStart_toEndOf="@+id/cd_t2_p2icon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#353535"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10">

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/bahnschrift"
            android:text="@string/winnerpays"
            android:textColor="#4CA33D"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/cd_price_seekbar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:max="5"
            android:progress="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView45" />

        <TextView
            android:id="@+id/winnerpays"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="#4CA33D"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView45"
            app:layout_constraintStart_toEndOf="@+id/textView45"
            app:layout_constraintTop_toTopOf="@+id/textView45"
            tools:text="50" />
    </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/cd_t1_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bahnschrift"
                tools:text="@string/player1"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/cd_t1_p1icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t1_p1icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t1_p1icon" />

            <TextView
                android:id="@+id/cd_t1_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
