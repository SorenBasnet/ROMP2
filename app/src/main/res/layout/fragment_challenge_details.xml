                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/cd_t1_p4icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t1_p4icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t1_p4icon"
                tools:text="@string/player3" />

            <TextView
                android:id="@+id/cd_t1_player4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bahnschrift"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/cd_t1_p3icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t1_p3icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t1_p3icon"
                tools:text="@string/player4" />

            <TextView
                android:id="@+id/cd_t1_player5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bahnschrift"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/cd_t1_p5icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t1_p5icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t1_p5icon"
                tools:text="@string/player5" />

            <TextView
                android:id="@+id/cd_t2_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bahnschrift"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/cd_t2_p5icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t2_p5icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t2_p5icon"
                tools:text="@string/player5" />

            <TextView
                android:id="@+id/cd_t2_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bahnschrift"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/cd_t2_p2icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t2_p2icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t2_p2icon"
                tools:text="@string/player5" />

            <TextView
                android:id="@+id/cd_t2_player3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bahnschrift"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/cd_t2_p4icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t2_p4icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t2_p4icon"
                tools:text="@string/player5" />

            <TextView
                android:id="@+id/cd_t2_player4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bahnschrift"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/cd_t2_p3icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t2_p3icon"
                app:layout_constraintTop_toBottomOf="@+id/cd_t2_p3icon"
                tools:text="@string/player5" />

            <TextView
                android:id="@+id/cd_t2_player5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/bahnschrift"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintEnd_toEndOf="@+id/cd_t2_p1icon"
                app:layout_constraintStart_toStartOf="@+id/cd_t2_p1icon"
                tools:text="@string/player5" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>