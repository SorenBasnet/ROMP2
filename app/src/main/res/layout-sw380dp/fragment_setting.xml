<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".Fragments.SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/explore_frag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/settings"
        android:textColor="#00518b"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        app:fontFamily="@font/chivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#454545"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_frag_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore_frag_title">

        <Button
            android:id="@+id/myaccount_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212121"
            android:fontFamily="@font/chivo"
            android:gravity="center_horizontal"
            android:text="@string/myaccount_button"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="27sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <Button
            android:id="@+id/aboutbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212121"
            android:fontFamily="@font/chivo"
            android:gravity="center_horizontal"
            android:text="@string/aboutbutton_text"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="27sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>